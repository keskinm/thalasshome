<!doctype html>
<html class="no-js" lang="{{ shop.locale }}">
  <head>
  {% include 'shop-sheriff-amp' %}

    <!-- Emerge Theme - Version 3.8.0 by Troop Themes - https://troopthemes.com/ -->

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.shopify.com" crossorigin>
    <link rel="preconnect" href="https://monorail-edge.shopifysvc.com">

    <link rel="preload" href="{{ 'theme--critical.css' | asset_url }}" as="style">
    <link rel="preload" href="{{ 'theme--async.css' | asset_url }}" as="style">
    <link rel="preload" href="{{ 'lazysizes.min.js' | asset_url }}" as="script">
    <link rel="preload" href="{{ 'theme.min.js' | asset_url }}" as="script">

    {%- if canonical_url != blank  -%}
      <link rel="canonical" href="{{ canonical_url }}">
    {%- endif -%}

    {% if settings.favicon != blank %}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x' }}" type="image/png">
      <link rel="apple-touch-icon" href="{{ settings.favicon | img_url: '180x' }}">
    {% endif %}

    {% render 'framework--social-meta-tags' %}

    {% if template == 'index' %}
      <title>{{ page_title }}</title>
    {% elsif template == 'password' %}
      <title>{{ shop.name }}</title>
    {% else %}
      <title>{{ page_title }} | {{ shop.name }}</title>
    {% endif %}

    {% render 'framework--css-variables' %}
    {% render 'partial--css-variables' %}
    {% render 'partial--js-variables' %}

    <script>
      function onLoadStylesheet() {
        var link = document.querySelector('link[href="' + theme.assets.stylesheet + '"]');
        link.loaded = true;
        link.dispatchEvent(new Event('load'));
      }
    </script>

    <link href="{{ 'theme--critical.css' | asset_url }}" rel="stylesheet" media="all"/>
    <link
      href="{{ 'theme--async.css' | asset_url }}"
      rel="stylesheet"
      media="print"
      onload="this.media='all';onLoadStylesheet()"
    >

    <style>
      {% render 'custom-styles' %}

      {% comment %} custom-add {% endcomment %}

      .custom-button {
        background-color: #212121 !important; 
        color: #ffffff !important;
        border-radius: 2px !important;
        font-family: Karla, sans-serif;
        font-weight: 400;
        font-style: normal;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 1px;
        height: 45px;
        line-height: 45px;
        padding: 0 16px;
        border: none;
        cursor: pointer;
        display: inline-block;
        text-align: center;
      }

      @media (max-width: 767px) {
        .custom-button {
          height: 35px !important;
          line-height: 35px !important;
        }
      }

      {% comment %} end custom-add {% endcomment %}

      {% comment %} custom-add - WhatsApp floating button {% endcomment %}
      .whatsapp-floating-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
        transition: transform 0.3s ease;
      }

      .whatsapp-floating-button:hover {
        transform: scale(1.1);
      }

      .whatsapp-floating-button a {
        display: flex;
        align-items: center;
        background-color: #25D366;
        color: white;
        padding: 12px 20px;
        border-radius: 50px;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-family: var(--font--accent--family);
        font-size: 14px;
      }

      .whatsapp-icon {
        margin-right: 8px;
        font-size: 20px;
      }

      @media (max-width: 767px) {
        .whatsapp-floating-button {
          bottom: 15px;
          right: 15px;
        }

        .whatsapp-text {
          display: none;
        }

        .whatsapp-floating-button a {
          padding: 12px;
          border-radius: 50%;
        }

        .whatsapp-icon {
          margin: 0;
        }
      }
      {% comment %} custom-add end WhatsApp floating button {% endcomment %}

    </style>

    <script src="{{ 'lazysizes.min.js' | asset_url }}" async="async"></script>
    <script src="{{ 'theme.min.js' | asset_url }}" defer="defer"></script>

    <script src="{{ 'my-date-picker.js' | asset_url }}" defer="defer"></script>

    {% if template contains 'product' %}
      <script src="{{ 'check-availability.js' | asset_url }}" defer="defer"></script>
    {% endif %}

     {{ '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css' | stylesheet_tag }}
  <!--[if (gt IE 9)|!(IE)]><!--><script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" defer="defer"></script><!--<![endif]-->
  <!--[if lte IE 9]><script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script><![endif]-->
  <!--[if (gt IE 9)|!(IE)]><!--><script src="//cdn.bookthatapp.com/fullcalendar2/lib/moment.min.js" defer="defer"></script><!--<![endif]-->
  <!--[if lte IE 9]><script src="//cdn.bookthatapp.com/fullcalendar2/lib/moment.min.js"></script><![endif]-->

    <script src="{{ 'my-address.js' | asset_url }}" defer="defer"></script>

    {% if template contains 'customers' %}
      <script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script>
      <script src="{{ 'customer_area.js' | shopify_asset_url }}" defer="defer"></script>
    {% endif %}

    {{ content_for_header }}
  

  
</head>

  <body
    class="template--{{ template | split: '.' | first | remove: '_' | replace: '/', '--' }} page--{{ page_title | handle }}"
    data-theme-id="833"
    data-theme-name="Emerge"
    data-theme-version="3.8.0"
    data-border="{{ settings.layout--show-page-border }}"
  >

    <!-- custom-add by owner -->
    <div id="location-message" style="display: none; padding: 10px; background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; margin: 10px 0;">
    </div>


    <div id="addressModal" style="
      display: none;
      opacity: 1;
      transition: opacity 4s ease-out;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      z-index: 9999;
      max-width: 400px;
      width: 90%;
    ">

      <div id="modalMessages"></div>

      <div style="
        margin-top: 0;
        text-align: center;
        font-size: 1.1em;
        line-height: 1.6;
        padding: 10px;
        border-radius: 8px;
      ">
        üåç Nous avons besoin de conna√Ætre la commune dans laquelle vous voulez effectuer votre livraison üåç
      </div>

      <div style="position: relative;">
        <input
          type="text"
          id="addressInput"
          placeholder="Ex. : Paris"
          style="
            width: 100%;
            padding: 12px;
            padding-right: 30px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
          "
        />
        <button
          id="clearAddressButton"
          onclick="clearAddressInput()"
          style="
            position: absolute;
            right: 8px;
            top: 20%;
            transform: translateY(-20%);
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            font-size: 18px;
            padding: 5px;
            display: none;
          "
          type="button"
          aria-label="Effacer l'adresse"
        >√ó</button>
      </div>

      <ul
        id="suggestions"
        style="
          list-style: none;
          padding: 0;
          margin: 0;
          max-height: 150px;
          overflow-y: auto;
          background: #fff;
          border: 1px solid #ccc;
          display: none;
          position: relative;
        "
      ></ul>

      <!-- Boutons -->
      <div style="margin-top: 0px; text-align: center;">
        <button
          data-item="button"
          onclick="useGeolocation()"
          class="custom-button"
        >
          <!-- Exemple d‚Äôic√¥ne ‚Äúgps‚Äù (Unicode üß≠ U+1F9ED) -->
          Me g√©olocaliser üß≠
        </button>
      </div>
    </div>


    <!-- end custom-add by owner -->

    {% unless template contains 'password' %}
      <a data-item="a11y-button" href='#main-content'>
        {{ 'general.skip_link' | t }}
      </a>
    {% endunless %}

    <div
      class="off-canvas--viewport"
      data-js-class="OffCanvas"
      data-off-canvas--state="closed"
    >
      <div class="off-canvas--overlay"></div>
      <div class="off-canvas--close" aria-label="{{ 'general.close' | t }}">
        {% render 'framework--icons', icon: 'cross' %}
      </div>

      <div class="off-canvas--left-sidebar">
        <div class="off-canvas--focus-trigger" tabindex="0"></div>
        {% render 'layout--mobile-nav' %}
        <div class="off-canvas--focus-trigger" tabindex="0"></div>
      </div>

      <div class="off-canvas--main-content">
        <div class="fullscreen-container">
          {% if template contains 'index' %}
            {% section 'index--banner' %}
          {% endif %}
          {% unless template == 'password' %}
            {% section 'announcement' %}
            {% section 'header' %}
          {% endunless %}
        </div>

        <main class="layout--main-content" id="main-content">
          {{ content_for_layout }}
        </main>

        {% section 'framework--footer' %}

        {% if settings.popup--enabled %}
          {% render 'partial--popup' %}
        {% endif %}

        {% render 'framework--feedback-bar' %}
      </div>

      <div class="off-canvas--right-sidebar" data-active="cart">
        <div class="off-canvas--focus-trigger" tabindex="0"></div>
        <div class="off-canvas--container" data-view="pickup"></div>

        {% if settings.cart--type == 'drawer' or settings.product--show-quick-add-buttons %}
          <div class="off-canvas--container" data-view="cart">
            {% render 'framework--cart', view: 'mobile' %}
          </div>
        {% endif %}

        <div class="off-canvas--focus-trigger" tabindex="0"></div>
      </div>
    </div>

    {% render 'framework--search', view: 'modal' %}
    {% render 'framework--modal' %}


    {% comment %} custom-add - WhatsApp floating button {% endcomment %}
    <div class="whatsapp-floating-button">
      <a href="https://wa.me/33651323494" target="_blank" rel="noopener" aria-label="Discuter sur WhatsApp">
        <span class="whatsapp-icon">üí¨</span>
        <span class="whatsapp-text">WhatsApp</span>
      </a>
    </div>
    {% comment %} end WhatsApp floating button {% endcomment %}


  </body>
</html>